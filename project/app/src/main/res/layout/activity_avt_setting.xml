<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AvtSetting">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECECEC"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:textColor="#010101"
        android:textSize="30dp" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:text="YYYYMMDD"
            android:textColor="#BDA9E7"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#ECECEC"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="39dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:textColor="#010101"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:text="HHmm"
            android:textColor="#BDA9E7"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#ECECEC"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다시울림"
            android:textColor="#010101"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txtCycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="textEnd"
            android:layout_marginLeft="25dp"
            android:text="(3분, 1일전, 3일전, 일주일 전)"
            android:textColor="#BDA9E7"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#FDFDFE"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="요일반복"
            android:textColor="#010101"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ECECEC"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnSun"
                android:layout_width="38dp"
                android:layout_height="50dp"
                android:text="일"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#FD002A"
                android:background="#F1B01D"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnMon"
                android:layout_width="38dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:text="월"
                android:textSize="25dp"
                android:textColor="#fff"
                android:background="#F1B01D"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnTue"
                android:layout_width="38dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:text="화"
                android:textSize="25dp"
                android:textColor="#fff"
                android:background="#F1B01D"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnWed"
                android:layout_width="38dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:text="수"
                android:textSize="25dp"
                android:textColor="#fff"
                android:background="#F1B01D"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnThu"
                android:layout_width="38dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:text="목"
                android:textSize="25dp"
                android:textColor="#fff"
                android:background="#F1B01D"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnFri"
                android:layout_width="38dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:text="금"
                android:textSize="25dp"
                android:textColor="#fff"
                android:background="#F1B01D"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnSat"
                android:layout_width="38dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:text="토"
                android:textSize="25dp"
                android:textColor="#0017EE"
                android:background="#F1B01D"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#FDFDFE"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림내용"
            android:textColor="#010101"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:background="#ECECEC"
            android:text="알림내용 ~~~"
            android:textColor="#BDA9E7"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#ECECEC"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림음, 진동"
            android:textColor="#010101"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:text="(음악명, 진동O)"
            android:textColor="#BDA9E7"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="취소"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="저장"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>